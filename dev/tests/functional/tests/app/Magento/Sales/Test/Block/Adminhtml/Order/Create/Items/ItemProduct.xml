<mapping strict="0">
    <fields>
        <name>
            <selector>.col-product span</selector>
        </name>
        <price>
            <selector>.col-price span.price</selector>
        </price>
        <qty>
            <selector>.col-qty input</selector>
        </qty>
        <checkout_data composite="1">
            <custom_price>
                <selector>.col-price input.item-price</selector>
            </custom_price>
            <use_custom_price>
                <selector>.col-price input[type=checkbox]</selector>
                <input>checkbox</input>
            </use_custom_price>
        </checkout_data>
    </fields>
</mapping>
