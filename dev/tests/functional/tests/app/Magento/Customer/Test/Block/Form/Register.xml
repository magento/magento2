<mapping strict="0">
    <fields>
        <firstname />
        <lastname />
        <email />
        <company />
        <telephone />
        <street>
            <selector>#street_1</selector>
        </street>
        <city />
        <region_id>
            <input>select</input>
        </region_id>
        <postcode />
        <country_id>
            <selector>#country</selector>
            <input>select</input>
        </country_id>
        <password />
        <confirmation />
        <is_subscribed>
            <input>checkbox</input>
        </is_subscribed>
        <password_confirmation>
            <selector>[name=confirmation]</selector>
        </password_confirmation>
    </fields>
</mapping>
