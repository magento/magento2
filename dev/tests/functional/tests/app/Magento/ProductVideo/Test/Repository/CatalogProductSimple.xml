    <repository class="Magento\Catalog\Test\Repository\CatalogProductSimple">
        <dataset name="product_with_video_youtube">
            <field name="attribute_set_id" xsi:type="array">
                <item name="dataset" xsi:type="string">default</item>
            </field>
