<config>
    <modules>
        <Mage_PageCache>
            <version>1.6.0.0</version>
            <active>true</active>
            <depends>
                <Mage_Core/>
            </depends>
        </Mage_PageCache>
    </modules>
    <global>
        <external_cache>
            <controls>
                <zend_page_cache translate="label" module="Mage_PageCache">
                    <label>Zend Full Page Cache</label>
                    <class>Mage_PageCache_Model_Control_Zend</class>
                </zend_page_cache>
            </controls>
        </external_cache>
        <events>
            <design_editor_activate>
                <observers>
                    <mage_pagecache>
                        <class>Mage_PageCache_Model_Observer</class>
                        <method>setNoCacheCookie</method>
                    </mage_pagecache>
                </observers>
            </design_editor_activate>
            <design_editor_deactivate>
                <observers>
                    <mage_pagecache>
                        <class>Mage_PageCache_Model_Observer</class>
                        <method>deleteNoCacheCookie</method>
                    </mage_pagecache>
                </observers>
            </design_editor_deactivate>
        </events>
    </global>
    <adminhtml>
        <translate>
            <modules>
                <Mage_PageCache>
                    <files>
                        <default>Mage_PageCache.csv</default>
                    </files>
                </Mage_PageCache>
            </modules>
        </translate>
    </adminhtml>
    <frontend>
        <events>
            <controller_action_predispatch>
                <observers>
                    <pagecache>
                        <class>Mage_PageCache_Model_Observer</class>
                        <method>processPreDispatch</method>
                    </pagecache>
                </observers>
            </controller_action_predispatch>
        </events>
        <cache>
            <allowed_requests>
                <cms/>
                <catalog>
                    <category>
                        <view/>
                    </category>
                </catalog>
                <catalog>
                    <product>
                        <view/>
                    </product>
                </catalog>
            </allowed_requests>
        </cache>
    </frontend>
    <admin>
        <routers>
            <adminhtml>
                <args>
                    <modules>
                        <Mage_PageCache before="Mage_Adminhtml">Mage_PageCache_Adminhtml</Mage_PageCache>
                    </modules>
                </args>
            </adminhtml>
        </routers>
    </admin>
    <default>
        <system>
            <external_page_cache>
                <enabled>0</enabled>
                <control>zend_page_cache</control>
                <cookie_lifetime>3600</cookie_lifetime>
            </external_page_cache>
        </system>
    </default>
</config>
