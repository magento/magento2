            imageRatioClass: '.image-ratio',
            imageWidthClass: '.image-width',
            imageHeightClass: '.image-height',
            formUrl: '<?php echo $this->getUrl('*/system_design_editor_tools/saveImageSizing', array('id' => $this->getTheme()->getId())) ?>',
