                                        <sort_order>20</sort_order>
                                    </show_list>
                                    <mark_as_read translate="title">
                                        <title>Mark as read</title>
                                        <sort_order>30</sort_order>
                                    </mark_as_read>
                                    <remove translate="title">
                                        <title>Remove</title>
                                        <sort_order>40</sort_order>
                                    </remove>
                                </children>
                            </adminnotification>
                        </children>
                    </system>
                </children>
