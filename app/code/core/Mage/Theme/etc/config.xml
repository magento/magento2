<config>
    <modules>
        <Mage_Theme>
            <version>1.6.0.0</version>
            <active>true</active>
            <codePool>core</codePool>
        </Mage_Theme>
    </modules>
    <global>
        <theme>
            <css>
                <upload_limit>2M</upload_limit>
            </css>
            <js>
                <upload_limit>2M</upload_limit>
            </js>
        </theme>
    </global>
    <admin>
        <routers>
            <adminhtml>
                <use>admin</use>
                <args>
                    <modules>
                        <theme>Mage_Theme_Adminhtml</theme>
                    </modules>
                </args>
            </adminhtml>
        </routers>
    </admin>
    <adminhtml>
        <layout>
            <updates>
                <theme module="Mage_Theme">
                    <file>layout.xml</file>
                </theme>
            </updates>
        </layout>
    </adminhtml>
</config>
