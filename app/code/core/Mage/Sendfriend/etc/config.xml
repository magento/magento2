<config>
    <modules>
        <Mage_Sendfriend>
            <version>1.6.0.0</version>
            <active>true</active>
            <codePool>core</codePool>
             <depends>
                <Mage_Catalog/>
             </depends>
        </Mage_Sendfriend>
    </modules>
    <global>
        <resources>
            <sendfriend_setup>
                <setup>
                    <module>Mage_Sendfriend</module>
                    <class>Mage_Sendfriend_Model_Resource_Setup</class>
                </setup>
            </sendfriend_setup>
        </resources>
        <template>
            <email>
                <sendfriend_email_template translate="label" module="Mage_Sendfriend">
                    <label>Send Product Link to Friend</label>
                    <file>email/product_share.html</file>
                    <type>html</type>
                </sendfriend_email_template>
            </email>
        </template>
    </global>
    <adminhtml>
        <translate>
            <modules>
                <Mage_Sendfriend>
                    <files>
                        <default>Mage_Sendfriend.csv</default>
                    </files>
                </Mage_Sendfriend>
            </modules>
        </translate>
    </adminhtml>
    <frontend>
        <events>
            <catalog_controller_product_view>
                <observers>
                    <sendfriend>
                        <class>Mage_Sendfriend_Model_Observer</class>
                        <method>register</method>
                    </sendfriend>
                </observers>
            </catalog_controller_product_view>
        </events>
        <routers>
            <sendfriend>
                <use>standard</use>
                <args>
                    <module>Mage_Sendfriend</module>
                    <frontName>sendfriend</frontName>
                </args>
            </sendfriend>
        </routers>
        <layout>
            <updates>
                <sendfriend module="Mage_Sendfriend">
                    <file>layout.xml</file>
                </sendfriend>
            </updates>
        </layout>
        <translate>
            <modules>
                <Mage_Sendfriend>
                    <files>
                        <default>Mage_Sendfriend.csv</default>
                    </files>
                </Mage_Sendfriend>
            </modules>
        </translate>
    </frontend>
    <default>
        <sendfriend>
            <email>
                <enabled>1</enabled>
                <template>sendfriend_email_template</template>
                <allow_guest>0</allow_guest>
                <max_recipients>5</max_recipients>
                <max_per_hour>5</max_per_hour>
                <check_by>0</check_by>
            </email>
        </sendfriend>
    </default>
</config>