<layout version="0.1.0">
    <ogone_api_paypage>
        <remove name="right"/>
        <remove name="left"/>
        <remove name="catalog.topnav"/>
        <reference name="header">
            <remove name="top.links"/>
            <remove name="top.search"/>
            <remove name="store_language"/>
            <remove name="top.container"/>
        </reference>
        <reference name="footer">
            <remove name="cms_footer_links"/>
            <remove name="footer_links"/>
            <remove name="store_switcher"/>
        </reference>
        <reference name="root">
            <action method="setTemplate"><template>1column.phtml</template></action>
        </reference>
        <reference name="content">
            <block type="Mage_Ogone_Block_Paypage" name="ogone_paypage" template="paypage.phtml"/>
        </reference>
    </ogone_api_paypage>

    <ogone_api_placeform>
        <remove name="right"/>
        <remove name="left"/>
        <reference name="content">
            <block type="Mage_Ogone_Block_Placeform" name="ogone_placeform" template="placeform.phtml"/>            
        </reference>
    </ogone_api_placeform>
</layout>
