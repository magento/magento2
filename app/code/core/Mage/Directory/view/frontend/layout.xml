<layout version="0.1.0">

<!--
Category default layout
-->
    <default>
        <reference name="head">
            <block type="Mage_Core_Block_Template" name="optional_zip_countries" as="optional_zip_countries" template="Mage_Directory::js/optional_zip_countries.phtml" />
        </reference>
    </default>

    <catalog_category_view>
        <reference name="left">
            <block type="Mage_Directory_Block_Currency" name="currency" before="catalog.leftnav" template="currency.phtml"/>
        </reference>
    </catalog_category_view>

<!--
Catalog Search layout
-->

    <catalogsearch_advanced_index>
        <reference name="left">
            <block type="Mage_Directory_Block_Currency" name="right_currency" before="-" template="currency.phtml"/>
        </reference>
    </catalogsearch_advanced_index>

    <catalogsearch_result_index>
        <reference name="left">
            <block type="Mage_Directory_Block_Currency" name="currency" before="-" template="currency.phtml"/>
        </reference>
    </catalogsearch_result_index>

    <catalogsearch_advanced_result>
        <reference name="right">
            <block type="Mage_Directory_Block_Currency" name="right_currency" before="-" template="currency.phtml"/>
        </reference>
    </catalogsearch_advanced_result>

</layout>
