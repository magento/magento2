<config>
    <modules>
        <Mage_Cms>
            <version>1.6.0.0.1</version>
            <active>true</active>
            <codePool>core</codePool>
            <depends>
                <Mage_Core/>
                <Mage_Page/>
            </depends>
        </Mage_Cms>
    </modules>
    <frontend>
        <routers>
            <cms>
                <use>standard</use>
                <args>
                    <module>Mage_Cms</module>
                    <frontName>cms</frontName>
                </args>
            </cms>
        </routers>
        <events>
            <controller_action_noroute>
                <observers>
                    <cms>
                        <class>Mage_Cms_Model_Observer</class>
                        <method>noRoute</method>
                    </cms>
                </observers>
            </controller_action_noroute>
            <controller_action_nocookies>
                <observers>
                    <cms>
                        <class>Mage_Cms_Model_Observer</class>
                        <method>noCookies</method>
                    </cms>
                </observers>
            </controller_action_nocookies>
        </events>
        <translate>
            <modules>
                <Mage_Cms>
                    <files>
                        <default>Mage_Cms.csv</default>
                    </files>
                </Mage_Cms>
            </modules>
        </translate>
        <layout>
            <updates>
                <cms module="Mage_Cms">
                    <file>layout.xml</file>
                </cms>
            </updates>
        </layout>
    </frontend>
    <adminhtml>
        <translate>
            <modules>
                <Mage_Cms>
                    <files>
                        <default>Mage_Cms.csv</default>
                    </files>
                </Mage_Cms>
            </modules>
        </translate>
        <cms>
            <browser>
                <dirs>
                    <exclude>


                    </exclude>
                    <include/>
                </dirs>
                <extensions>
                    <allowed>
                        <jpg>1</jpg>
                        <jpeg>1</jpeg>
                        <png>1</png>
                        <gif>1</gif>
                    </allowed>
                    <image_allowed>
                        <jpg>1</jpg>
                        <jpeg>1</jpeg>
                        <png>1</png>
                        <gif>1</gif>
                    </image_allowed>
                    <media_allowed>
                        <flv>1</flv>
                        <swf>1</swf>
                        <avi>1</avi>
                        <mov>1</mov>
                        <rm>1</rm>
                        <wmv>1</wmv>
                    </media_allowed>
                </extensions>
                <window_width>1000</window_width>
                <window_height>600</window_height>
                <resize_width>100</resize_width>
                <resize_height>75</resize_height>
            </browser>
        </cms>
    </adminhtml>
    <global>
        <resources>
            <cms_setup>
                <setup>
                    <module>Mage_Cms</module>
                </setup>
            </cms_setup>
        </resources>
        <events>
            <controller_front_init_routers>
                <observers>
                    <cms>
                        <class>Mage_Cms_Controller_Router</class>
                        <method>initControllerRouters</method>
                    </cms>
                </observers>
            </controller_front_init_routers>
        </events>
        <cms>
            <page>
                <tempate_filter>Mage_Cms_Model_Template_Filter</tempate_filter>
            </page>
            <block>
                <tempate_filter>Mage_Cms_Model_Template_Filter</tempate_filter>
            </block>
        </cms>
    </global>
    <default>
        <web>
            <default>
                <cms_home_page>home</cms_home_page>
                <cms_no_route>no-route</cms_no_route>
                <cms_no_cookies>enable-cookies</cms_no_cookies>
                <front>cms</front>
                <no_route>cms/index/noRoute</no_route>
                <show_cms_breadcrumbs>1</show_cms_breadcrumbs>
            </default>
        </web>
        <cms>
            <wysiwyg>
                <enabled>enabled</enabled>
            </wysiwyg>
        </cms>
        <system>
            <media_storage_configuration>
                <allowed_resources>
                    <wysiwyg_image_folder>wysiwyg</wysiwyg_image_folder>
                </allowed_resources>
            </media_storage_configuration>
        </system>
    </default>
</config>
