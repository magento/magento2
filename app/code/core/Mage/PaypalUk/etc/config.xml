<config>
    <modules>
        <Mage_PaypalUk>
            <version>1.6.0.0</version>
            <active>true</active>
            <codePool>core</codePool>
            <depends>
                <Mage_Paygate/>
                <Mage_Checkout/>
                <Mage_Sales/>
                <Mage_Paypal/>
            </depends>
        </Mage_PaypalUk>
    </modules>
    <global>
        <resources>
            <paypaluk_setup>
                <setup>
                    <module>Mage_PaypalUk</module>
                </setup>
            </paypaluk_setup>
        </resources>
    </global>
    <frontend>
        <secure_url>
            <paypaluk_express>/paypaluk/express</paypaluk_express>
        </secure_url>
        <routers>
            <paypaluk>
                <use>standard</use>
                <args>
                    <module>Mage_PaypalUk</module>
                    <frontName>paypaluk</frontName>
                </args>
            </paypaluk>
        </routers>
        <translate>
            <modules>
                <Mage_PaypalUk>
                    <files>
                        <default>Mage_PaypalUk.csv</default>
                    </files>
                </Mage_PaypalUk>
            </modules>
        </translate>
        <layout>
            <updates>
                <paypaluk module="Mage_PaypalUk">
                    <file>layout.xml</file>
                </paypaluk>
            </updates>
        </layout>
    </frontend>
    <adminhtml>
        <translate>
            <modules>
                <Mage_PaypalUk>
                    <files>
                        <default>Mage_PaypalUk.csv</default>
                    </files>
                </Mage_PaypalUk>
            </modules>
        </translate>
    </adminhtml>
    <default>
        <payment>
            <paypaluk_express>
                <model>Mage_PaypalUk_Model_Express</model>
            </paypaluk_express>
            <paypaluk_direct>
                <model>Mage_PaypalUk_Model_Direct</model>
            </paypaluk_direct>
        </payment>
    </default>
</config>
