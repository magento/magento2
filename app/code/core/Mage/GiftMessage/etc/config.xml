<config>
    <modules>
        <Mage_GiftMessage>
            <version>1.6.0.0</version>
            <active>true</active>
            <codePool>core</codePool>
            <depends>
                <Mage_Catalog/>
                <Mage_Sales/>
            </depends>
        </Mage_GiftMessage>
    </modules>
    <global>
        <resources>
            <giftmessage_setup>
                <setup>
                    <module>Mage_GiftMessage</module>
                    <class>Mage_GiftMessage_Model_Resource_Setup</class>
                </setup>
            </giftmessage_setup>
        </resources>
        <sales>
            <quote>
                <item>
                    <product_attributes>
                        <gift_message_available/>
                    </product_attributes>
                </item>
            </quote>
        </sales>
    </global>
    <default>
        <sales>
            <gift_messages>
                <allow_items>0</allow_items>
                <allow_order>0</allow_order>
            </gift_messages>
        </sales>
    </default>
    <adminhtml>
        <translate>
            <modules>
                <Mage_GiftMessage>
                    <files>
                        <default>Mage_GiftMessage.csv</default>
                    </files>
                </Mage_GiftMessage>
            </modules>
        </translate>
        <events>
            <sales_convert_quote_item_to_order_item>
                <observers>
                    <giftmessage>
                        <type>model</type>
                        <class>Mage_GiftMessage_Model_Observer</class>
                        <method>salesEventConvertQuoteItemToOrderItem</method>
                    </giftmessage>
                </observers>
            </sales_convert_quote_item_to_order_item>
            <sales_convert_quote_address_to_order>
                <observers>
                    <giftmessage>
                        <type>model</type>
                        <class>Mage_GiftMessage_Model_Observer</class>
                        <method>salesEventConvertQuoteAddressToOrder</method>
                    </giftmessage>
                </observers>
            </sales_convert_quote_address_to_order>
            <sales_convert_quote_to_order>
                <observers>
                    <giftmessage>
                        <type>model</type>
                        <class>Mage_GiftMessage_Model_Observer</class>
                        <method>salesEventConvertQuoteToOrder</method>
                    </giftmessage>
                </observers>
            </sales_convert_quote_to_order>
            <adminhtml_sales_order_create_create_order>
                <observers>
                    <giftmessage>
                        <type>model</type>
                        <class>Mage_GiftMessage_Model_Observer</class>
                        <method>checkoutEventCreateOrder</method>
                    </giftmessage>
                </observers>
            </adminhtml_sales_order_create_create_order>
            <sales_convert_order_to_quote>
                <observers>
                    <giftmessage>
                        <type>model</type>
                        <class>Mage_GiftMessage_Model_Observer</class>
                        <method>salesEventOrderToQuote</method>
                    </giftmessage>
                </observers>
            </sales_convert_order_to_quote>
            <sales_convert_order_item_to_quote_item>
                <observers>
                    <giftmessage>
                        <type>model</type>
                        <class>Mage_GiftMessage_Model_Observer</class>
                        <method>salesEventOrderItemToQuoteItem</method>
                    </giftmessage>
                </observers>
            </sales_convert_order_item_to_quote_item>
        </events>
        <layout>
            <updates>
                <giftmessage module="Mage_GiftMessage">
                    <file>layout.xml</file>
                </giftmessage>
            </updates>
        </layout>
    </adminhtml>
    <frontend>
        <events>
            <sales_convert_quote_item_to_order_item>
                <observers>
                    <giftmessage>
                        <type>model</type>
                        <class>Mage_GiftMessage_Model_Observer</class>
                        <method>salesEventConvertQuoteItemToOrderItem</method>
                    </giftmessage>
                </observers>
            </sales_convert_quote_item_to_order_item>
            <sales_convert_quote_address_to_order>
                <observers>
                    <giftmessage>
                        <type>model</type>
                        <class>Mage_GiftMessage_Model_Observer</class>
                        <method>salesEventConvertQuoteAddressToOrder</method>
                    </giftmessage>
                </observers>
            </sales_convert_quote_address_to_order>
            <sales_convert_quote_to_order>
                <observers>
                    <giftmessage>
                        <type>model</type>
                        <class>Mage_GiftMessage_Model_Observer</class>
                        <method>salesEventConvertQuoteToOrder</method>
                    </giftmessage>
                </observers>
            </sales_convert_quote_to_order>
            <checkout_controller_onepage_save_shipping_method>
                <observers>
                    <giftmessage>
                        <type>model</type>
                        <class>Mage_GiftMessage_Model_Observer</class>
                        <method>checkoutEventCreateGiftMessage</method>
                    </giftmessage>
                </observers>
            </checkout_controller_onepage_save_shipping_method>
            <checkout_controller_multishipping_shipping_post>
                <observers>
                    <giftmessage>
                        <type>model</type>
                        <class>Mage_GiftMessage_Model_Observer</class>
                        <method>checkoutEventCreateGiftMessage</method>
                    </giftmessage>
                </observers>
            </checkout_controller_multishipping_shipping_post>
            <sales_convert_order_to_quote>
                <observers>
                    <giftmessage>
                        <type>model</type>
                        <class>Mage_GiftMessage_Model_Observer</class>
                        <method>salesEventOrderToQuote</method>
                    </giftmessage>
                </observers>
            </sales_convert_order_to_quote>
        </events>
        <routers>
            <giftmessage>
                <use>standard</use>
                <args>
                    <module>Mage_GiftMessage</module>
                    <frontName>giftmessage</frontName>
                </args>
            </giftmessage>
        </routers>
        <translate>
            <modules>
                <Mage_GiftMessage>
                    <files>
                        <default>Mage_GiftMessage.csv</default>
                    </files>
                </Mage_GiftMessage>
            </modules>
        </translate>
    </frontend>
</config>
