<script type="text/javascript">
    var FORM_KEY = "<?php echo $this->getFormKey();?>";
</script>
    <ul>
        <li>
        <?php if ($this->getProfile()->getId()):?>
            <img src="<?php echo $this->getSkinUrl('images/note_msg_icon.gif')?>" class="v-middle" style="margin-right:5px"/>
