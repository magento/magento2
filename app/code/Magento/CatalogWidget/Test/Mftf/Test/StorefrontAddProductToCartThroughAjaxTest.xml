<tests xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:noNamespaceSchemaLocation="urn:magento:mftf:Test/etc/testSchema.xsd">
    <test name="StorefrontAddProductToCartThroughAjaxTest">
        <annotations>
            <features value="Product List Widget"/>
            <stories value="Add product to cart through ajax in Product List widget"/>
            <title value="Add product through ajax"/>
            <description value="Add product to cart through ajax in Product List widget on Cms page"/>
            <severity value="MAJOR"/>
            <testCaseId value="MC-35111"/>
        </annotations>
        <before>
            <magentoCLI command="config:set cms/pagebuilder/enabled 0" stepKey="disablePageBuilder"/>
            <createData entity="ApiCategory" stepKey="createCategory"/>
            <createData entity="ApiSimpleProduct" stepKey="createSimpleProduct">
                <requiredEntity createDataKey="createCategory"/>
            </createData>
            <actionGroup ref="AdminLoginActionGroup" stepKey="loginAsAdmin"/>
            <actionGroup ref="DisabledWYSIWYGActionGroup" stepKey="disableWYSIWYG"/>
            <actionGroup ref="AdminOpenCmsPageActionGroup" stepKey="onAdminCmsHomePage">
                <argument name="page_id" value="{{CmsHomePageContent.page_id}}"/>
            </actionGroup>
            <waitForPageLoad stepKey="waitForGroupsToLoad"/>
            <click selector="{{CmsNewPagePageContentSection.header}}" stepKey="clickExpandContentTabForPage"/>
            <actionGroup ref="AdminInsertWidgetToCmsPageContentActionGroup" stepKey="insertWidgetToCmsPageContentActionGroup">
                <argument name="widgetType" value="Catalog Products List"/>
            </actionGroup>
            <actionGroup ref="AdminFillCatalogProductsListWidgetCategoryActionGroup" stepKey="fillCatalogProductsListWidgetOptions">
                <argument name="categoryName" value="$createCategory.name$"/>
            </actionGroup>
            <actionGroup ref="AdminClickInsertWidgetActionGroup" stepKey="clickInsertWidgetButton"/>
            <actionGroup ref="SaveCmsPageActionGroup" stepKey="clickSaveButton"/>
        </before>
        <after>
            <magentoCLI command="config:set cms/pagebuilder/enabled 1" stepKey="enablePageBuilder"/>
            <deleteData createDataKey="createSimpleProduct" stepKey="deleteSimpleProduct"/>
            <deleteData createDataKey="createCategory" stepKey="deleteCategory"/>
            <actionGroup ref="AdminLogoutActionGroup" stepKey="logoutFromAdmin"/>
        </after>
        <actionGroup ref="StorefrontOpenHomePageActionGroup" stepKey="goToHomePage"/>
        <actionGroup ref="StorefrontAddToCartFromCmsPageUsingAjaxActionGroup" stepKey="addProductToCart"/>
        <actionGroup ref="AssertStorefrontProductMessagesActionGroup" stepKey="checkSuccessMsg">
            <argument name="productName" value="$$createSimpleProduct.name$$"/>
        </actionGroup>
        <actionGroup ref="StorefrontClickOnMiniCartActionGroup" stepKey="clickOnMiniCart"/>
        <actionGroup ref="AssertStorefrontMiniCartItemsActionGroup" stepKey="assertMiniCart">
            <argument name="productName" value="$$createSimpleProduct.name$$"/>
            <argument name="productPrice" value="$123.00"/>
            <argument name="cartSubtotal" value="123.00" />
            <argument name="qty" value="1"/>
        </actionGroup>
    </test>
</tests>
