<?xml version="1.0" ?>
<routes xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Webapi:etc/webapi.xsd">
    <route method="GET" url="/V1/wishlist/:customerId">
        <service class="Magento\Wishlist\Api\WishlistRepositoryInterface" method="getWishlistForCustomer"/>
        <resources>
            <resource ref="anonymous"/>
        </resources>
    </route>
    <route method="POST" url="/V1/wishlist/add/:customerId/:productId">
        <service class="Magento\Wishlist\Api\WishlistRepositoryInterface" method="addWishlistForCustomer"/>
        <resources>
            <resource ref="anonymous"/>
        </resources>
    </route>
</routes>
