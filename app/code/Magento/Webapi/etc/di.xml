<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
    <type name="Magento\App\AreaList">
        <arguments>
            <argument name="areas" xsi:type="array">
                <item name="webapi_rest" xsi:type="array">
                    <item name="frontName" xsi:type="string">rest</item>
                </item>
                <item name="webapi_soap" xsi:type="array">
                    <item name="frontName" xsi:type="string">soap</item>
                </item>
            </argument>
        </arguments>
    </type>
    <type name="Magento\Xml\Generator" shared="false" />
    <type name="Magento\Xml\Parser" shared="false" />
    <type name="Magento\Code\Scanner\DirectoryScanner" shared="false" />
    <type name="Magento\Server\Reflection" shared="false" />
    <type name="Magento\Integration\Service\IntegrationV1">
        <plugin name="webapiIntegrationServiceV1" type="Magento\Webapi\Model\Plugin\IntegrationServiceV1"/>
    </type>
</config>
