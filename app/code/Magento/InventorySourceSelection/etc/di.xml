<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:framework:ObjectManager/etc/config.xsd">
    <preference for="Magento\InventorySourceSelectionApi\Api\Data\InventoryRequestInterface"
                type="Magento\InventorySourceSelection\Model\Request\InventoryRequest"/>
    <preference for="Magento\InventorySourceSelectionApi\Api\Data\ItemRequestInterface"
                type="Magento\InventorySourceSelection\Model\Request\ItemRequest"/>
    <preference for="Magento\InventorySourceSelectionApi\Api\Data\SourceSelectionAlgorithmInterface"
                type="Magento\InventorySourceSelection\Model\SourceSelectionAlgorithm"/>
    <preference for="Magento\InventorySourceSelectionApi\Api\Data\SourceSelectionItemInterface"
                type="Magento\InventorySourceSelection\Model\Result\SourceSelectionItem"/>
    <preference for="Magento\InventorySourceSelectionApi\Api\Data\SourceSelectionResultInterface"
                type="Magento\InventorySourceSelection\Model\Result\SourceSelectionResult"/>
    <preference for="Magento\InventorySourceSelectionApi\Api\SourceSelectionServiceInterface"
                type="Magento\InventorySourceSelection\Model\SourceSelectionService"/>
    <preference for="Magento\InventorySourceSelectionApi\Api\GetDefaultSourceSelectionAlgorithmCodeInterface"
                type="Magento\InventorySourceSelection\Model\GetDefaultSourceSelectionAlgorithmCode"/>
    <preference for="Magento\InventorySourceSelectionApi\Api\GetGeoReferenceProviderCodeInterface"
                type="Magento\InventorySourceSelection\Model\DistanceProvider\GetGeoReferenceProviderCode"/>
    <preference for="Magento\InventorySourceSelectionApi\Api\Data\AddressRequestInterface"
                type="Magento\InventorySourceSelection\Model\Request\AddressRequest"/>

    <type name="Magento\InventorySourceSelection\Model\SourceSelectionService">
        <arguments>
            <argument name="sourceSelectionMethods" xsi:type="array">
                <item name="priority"
                      xsi:type="string">Magento\InventorySourceSelection\Model\Algorithms\PriorityBasedAlgorithm</item>
                <item name="distance"
                      xsi:type="string">Magento\InventorySourceSelection\Model\Algorithms\DistanceBasedAlgorithm</item>
            </argument>
        </arguments>
    </type>

    <virtualType name="Magento\InventorySourceSelection\Model\DistanceProvider\GoogleMapProvider"
                 type="Magento\InventorySourceSelection\Model\DistanceProvider\GeoReferenceProvider">
        <arguments>
            <argument xsi:type="object" name="getDistance">Magento\InventorySourceSelection\Model\DistanceProvider\GoogleMap\GetDistance</argument>
            <argument xsi:type="object" name="getLatLngRequestFromAddress">Magento\InventorySourceSelection\Model\DistanceProvider\GoogleMap\GetLatLngRequestFromAddress</argument>
        </arguments>
    </virtualType>

    <virtualType name="Magento\InventorySourceSelection\Model\DistanceProvider\OfflineProvider"
                 type="Magento\InventorySourceSelection\Model\DistanceProvider\GeoReferenceProvider">
        <arguments>
            <argument xsi:type="object" name="getDistance">Magento\InventorySourceSelection\Model\DistanceProvider\Offline\GetDistance</argument>
            <argument xsi:type="object" name="getLatLngRequestFromAddress">Magento\InventorySourceSelection\Model\DistanceProvider\Offline\GetLatLngRequestFromAddress</argument>
        </arguments>
    </virtualType>

    <type name="Magento\InventorySourceSelectionApi\Model\GeoReferenceProviderPool">
        <arguments>
            <argument name="providers" xsi:type="array">
                <item name="google"
                      xsi:type="object">Magento\InventorySourceSelection\Model\DistanceProvider\GoogleMapProvider</item>
                <item name="offline"
                      xsi:type="object">Magento\InventorySourceSelection\Model\DistanceProvider\OfflineProvider</item>
            </argument>
        </arguments>
    </type>

    <type name="Magento\InventorySourceSelection\Model\Config\Source\DistanceProvider">
        <arguments>
            <argument name="distanceProviderDescriptions" xsi:type="array">
                <item name="google" xsi:type="string">Google MAP</item>
                <item name="offline" xsi:type="string">Offline calculation</item>
            </argument>
        </arguments>
    </type>

    <type name="Magento\InventorySourceSelection\Model\GetInventoryRequestFromOrderBuilder">
        <arguments>
            <argument name="buildersByAlgorithm" xsi:type="array">
                <item name="priority"
                      xsi:type="object">Magento\InventorySourceSelection\Model\InventoryRequestBuilder\FromOrder\DefaultBuilder</item>
                <item name="distance"
                      xsi:type="object">Magento\InventorySourceSelection\Model\InventoryRequestBuilder\FromOrder\DistanceBuilder</item>
            </argument>
        </arguments>
    </type>

    <type name="Magento\Config\Model\Config\TypePool">
        <arguments>
            <argument name="sensitive" xsi:type="array">
                <item name="cataloginventory/source_selection_distance_based_google/api_key" xsi:type="string">1</item>
            </argument>
            <argument name="environment" xsi:type="array">
                <item name="cataloginventory/source_selection_distance_based_google/api_key" xsi:type="string">1</item>
            </argument>
        </arguments>
    </type>

    <type name="Magento\Framework\Console\CommandList">
        <arguments>
            <argument name="commands" xsi:type="array">
                <item name="importGeoNames" xsi:type="object">Magento\InventorySourceSelection\Console\Command\ImportGeoNamesCommand</item>
            </argument>
        </arguments>
    </type>
</config>
