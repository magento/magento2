<div class="locale-switcher-field field">
    <label class="label" for="locale-switcher"><span><?php echo __('Interface Locale'); ?></span></label>
    <div class="control">
        <?php echo $this->getLocaleSelect(); ?>
    </div>
    <script>
        (function () {
            'use strict';

            var elem = document.getElementById('footer_interface_locale');

            function onChange() {
                window.location.href = '<?php echo $this->getChangeLocaleUrl() ?>locale/' + elem.value + '/<?php echo $this->getUrlForReferer() ?>';
            }

            elem.addEventListener('change', onChange);
        })();
    </script>
</div>
