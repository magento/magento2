<actionGroups xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:mftf:Test/etc/actionGroupSchema.xsd">
    <actionGroup name="AdminUiGridMassForAllActionGroup" extends="AdminUiGridMassActionGroup">
        <annotations>
            <description>Massive action for all rows on Admin Grid page.</description>
        </annotations>
        <click selector="{{AdminGridSelectRows.multicheckDropdown}}" stepKey="openMulticheckDropdown" before="clickActionDropdown"/>
        <click selector="{{AdminGridSelectRows.multicheckOption('Select All')}}" stepKey="selectAllRows" after="openMulticheckDropdown"/>
    </actionGroup>
</actionGroups>
