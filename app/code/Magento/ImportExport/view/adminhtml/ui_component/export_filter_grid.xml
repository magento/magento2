<listing xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Ui:etc/ui_configuration.xsd"
         component="Magento_ImportExport/js/export/filter-grid">
    <argument name="data" xsi:type="array">
        <item name="js_config" xsi:type="array">
            <item name="provider" xsi:type="string">export_filter_grid.export_filter_grid_data_source</item>
        </item>
    </argument>
    <settings>
        <spinner>export_filter_columns</spinner>
        <deps>
            <dep>export_filter_grid.export_filter_grid_data_source</dep>
        </deps>
    </settings>
    <dataSource name="export_filter_grid_data_source" component="Magento_Ui/js/grid/provider">
        <settings>
            <storageConfig>
                <param name="indexField" xsi:type="string">attribute_id</param>
            </storageConfig>
            <updateUrl path="mui/index/render"/>
        </settings>
        <aclResource>Magento_ImportExport::export</aclResource>
        <dataProvider class="Magento\ImportExport\Ui\DataProvider\ExportFilterDataProvider"
                      name="export_filter_grid_data_source">
            <settings>
                <primaryFieldName>id</primaryFieldName>
                <requestFieldName>attribute_id</requestFieldName>
            </settings>
        </dataProvider>
    </dataSource>
    <listingToolbar name="listing_top" template="Magento_ImportExport/export/filter-grid/toolbar">
        <filters name="listing_filter" template="Magento_ImportExport/export/filter-grid/filters/filters"/>
        <paging name="listing_paging" class="Magento\Ui\Component\Container"/>
    </listingToolbar>
    <columns name="export_filter_columns" template="Magento_ImportExport/export/filter-grid/listing">
        <argument name="data" xsi:type="array">
            <item name="js_config" xsi:type="array">
                <item name="modules" xsi:type="array">
                    <item name="filter" xsi:type="string">${ $.parentName }.listing_top.listing_filter</item>
                </item>
            </item>
        </argument>
        <selectionsColumn name="skip_attr">
            <settings>
                <label translate="true">Exclude</label>
                <headerTmpl>ui/grid/columns/text</headerTmpl>
                <indexField>attribute_id</indexField>
            </settings>
        </selectionsColumn>
        <column name="frontend_label">
            <settings>
                <label translate="true">Attribute Label</label>
                <filter>text</filter>
            </settings>
        </column>
        <column name="attribute_code">
            <settings>
                <label translate="true">Attribute Code</label>
                <sorting>asc</sorting>
                <filter>text</filter>
            </settings>
        </column>
        <column name="filter">
            <settings>
                <label translate="true">Filter</label>
                <sortable>false</sortable>
            </settings>
        </column>
    </columns>
</listing>
