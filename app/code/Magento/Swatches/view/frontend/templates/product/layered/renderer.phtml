/** @var \Magento\Swatches\Block\LayeredNavigation\RenderLayered $block */
/** @var \Magento\Framework\Escaper $escaper */
?>
<?php $swatchData = $block->getSwatchData(); ?>
<div class="swatch-attribute swatch-layered <?= $escaper->escapeHtmlAttr($swatchData['attribute_code']) ?>"
     data-attribute-code="<?= $escaper->escapeHtmlAttr($swatchData['attribute_code']) ?>"
     data-attribute-id="<?= $escaper->escapeHtmlAttr($swatchData['attribute_id']) ?>">
    <div class="swatch-attribute-options clearfix">
        <?php foreach ($swatchData['options'] as $option => $label):?>
            <?php if (!empty($option)):
                $swatchOption = $swatchData['swatches'][$option];
                ?>
                <a href="<?= $escaper->escapeUrl($label['link']) ?>" rel="nofollow"
                   aria-label="<?= $escaper->escapeHtmlAttr($label['label']) ?>"
                   class="swatch-option-link-layered">
                    <?php if (isset($swatchOption['type'])): ?>
                        <?php switch ($swatchOption['type']) {
                            case '3':
                                ?>
                                <div class="swatch-option <?= $escaper->escapeHtmlAttr($label['custom_style']) ?>"
                                     tabindex="-1"
                                     option-type="3"
                                     data-option-type="3"
                                     option-id="<?= $escaper->escapeHtmlAttr($option) ?>"
                                     data-option-id="<?= $escaper->escapeHtmlAttr($option) ?>"
                                     option-label="<?= $escaper->escapeHtmlAttr($label['label']) ?>"
                                     data-option-label="<?= $escaper->escapeHtmlAttr($label['label']) ?>"
                                     option-tooltip-thumb=""
                                     data-option-tooltip-thumb=""
                                     option-tooltip-value=""
                                     data-option-tooltip-value="">
                                </div>
                                <?php break;
                            case '2':
                                ?>
                                <?php $swatchThumbPath = $block->getSwatchPath(
                                'swatch_thumb',
                                $swatchOption['value']
                            ); ?>
                                <?php $swatchImagePath = $block->getSwatchPath(
                                'swatch_image',
                                $swatchOption['value']
                            );
                                $escapedUrl = $escaper->escapeUrl($swatchImagePath);
                                ?>
                                <div class="swatch-option image <?= $escaper->escapeHtmlAttr($label['custom_style']) ?>"
                                     tabindex="-1"
                                     option-type="2"
                                     data-option-type="2"
                                     option-id="<?= $escaper->escapeHtmlAttr($option) ?>"
                                     data-option-id="<?= $escaper->escapeHtmlAttr($option) ?>"
                                     option-label="<?= $escaper->escapeHtmlAttr($label['label']) ?>"
                                     data-option-label="<?= $escaper->escapeHtmlAttr($label['label']) ?>"
                                     option-tooltip-thumb="<?= $escaper->escapeUrl($swatchThumbPath) ?>"
                                     data-option-tooltip-thumb="<?= $escaper->escapeUrl($swatchThumbPath) ?>"
                                     option-tooltip-value=""
                                     data-option-tooltip-value=""
                                     style="background-image: url(<?= /*  @noEscape */ $escapedUrl ?>)">
                                </div>
                                <?php break;
                            case '1':
                                ?>
                                <div class="swatch-option color <?= $escaper->escapeHtmlAttr($label['custom_style']) ?>"
                                     tabindex="-1"
                                     option-type="1"
                                     data-option-type="1"
                                     option-id="<?= $escaper->escapeHtmlAttr($option) ?>"
                                     data-option-id="<?= $escaper->escapeHtmlAttr($option) ?>"
                                     option-label="<?= $escaper->escapeHtmlAttr($label['label']) ?>"
                                     data-option-label="<?= $escaper->escapeHtmlAttr($label['label']) ?>"
                                     option-tooltip-thumb=""
                                     data-option-tooltip-thumb=""
                                     option-tooltip-value="<?= $escaper->escapeHtmlAttr($swatchOption['value']) ?>"
                                     data-option-tooltip-value="<?= $escaper->escapeHtmlAttr($swatchOption['value']) ?>"
                                     style="background-color: <?= $escaper->escapeHtmlAttr($swatchOption['value']) ?>;">
                                </div>
                                <?php break;
                            case '0':
                            default:
                                ?>
                                <div class="swatch-option text <?= $escaper->escapeHtmlAttr($label['custom_style']) ?>"
                                     tabindex="-1"
                                     option-type="0"
                                     data-option-type="0"
                                     option-id="<?= $escaper->escapeHtmlAttr($option) ?>"
                                     data-option-id="<?= $escaper->escapeHtmlAttr($option) ?>"
                                     option-label="<?= $escaper->escapeHtmlAttr($label['label']) ?>"
                                     data-option-label="<?= $escaper->escapeHtmlAttr($label['label']) ?>"
                                     option-tooltip-thumb=""
                                     data-option-tooltip-thumb=""
                                     option-tooltip-value=""
                                     data-option-tooltip-value=""
                                >
                                    <?= $escaper->escapeHtml($swatchOption['value']) ?>
                                </div>
                                <?php break;
                        } ?>
                    <?php endif; ?>
                </a>
            <?php endif; ?>
        <?php endforeach; ?>
    </div>
</div>

<?php
$swatchTooltipWrapper = '.swatch-layered.' . $escaper->escapeJs($swatchData['attribute_code']);
$swatchTooltipTargets = [];
for ($swatchType = 0; $swatchType <= 3; $swatchType++) {
    $swatchTooltipTargets[] = $swatchTooltipWrapper . ' [data-option-type=\"' . $swatchType . '\"]';
}
?>
<script type="text/x-magento-init">
    {
        "<?= /* @noEscape */ implode(', ', $swatchTooltipTargets) ?>": {
            "Magento_Swatches/js/swatch-renderer-tooltip": {}
        }
    }
</script>
