<?php
/** @var \Magento\Weee\Block\Item\Price\Renderer $block */

$_item = $block->getItem();
?>

<?php if ($block->displayPriceExclTax() || $block->displayBothPrices()): ?>
    <?php if ($block->displayBothPrices()): ?>
        <span class="label"><?php /* @escapeNotVerified */ echo __('Excl. Tax'); ?>:</span>
    <?php endif; ?>
    <?php /* @escapeNotVerified */ echo $block->formatPrice($block->getUnitDisplayPriceExclTax()); ?>

    <?php if ($this->helper('Magento\Weee\Helper\Data')->getApplied($_item)): ?>
        <br />
        <?php if ($block->displayPriceWithWeeeDetails()): ?>
            <small>
                <?php foreach ($this->helper('Magento\Weee\Helper\Data')->getApplied($_item) as $tax): ?>
                    <span class="nobr"><?php /* @escapeNotVerified */ echo $tax['title']; ?>: <?php /* @escapeNotVerified */ echo $block->formatPrice($tax['amount'], true, true); ?></span><br />
                <?php endforeach; ?>
            </small>
        <?php endif; ?>

        <?php if ($block->displayFinalPrice()): ?>
            <br />
            <span class="nobr"><?php /* @escapeNotVerified */ echo __('Total'); ?>:<br />
                <?php /* @escapeNotVerified */ echo $block->formatPrice($block->getFinalUnitDisplayPriceExclTax()); ?>
            </span>
        <?php endif; ?>
    <?php endif; ?>
<?php endif; ?>


<?php if ($block->displayPriceInclTax() || $block->displayBothPrices()): ?>
    <?php if ($block->displayBothPrices()): ?>
        <br /><span class="label"><?php /* @escapeNotVerified */ echo __('Incl. Tax'); ?>:</span>
    <?php endif; ?>
    <?php /* @escapeNotVerified */ echo $block->formatPrice($block->getUnitDisplayPriceInclTax()); ?>

    <?php if ($this->helper('Magento\Weee\Helper\Data')->getApplied($_item)): ?>
        <br />
        <?php if ($block->displayPriceWithWeeeDetails()): ?>
            <small>
                <?php foreach ($this->helper('Magento\Weee\Helper\Data')->getApplied($_item) as $tax): ?>
                    <span class="nobr"><?php /* @escapeNotVerified */ echo $tax['title']; ?>: <?php /* @escapeNotVerified */ echo $block->formatPrice($tax['amount_incl_tax'], true, true); ?></span><br />
                <?php endforeach; ?>
            </small>
        <?php endif; ?>

        <?php if ($block->displayFinalPrice()): ?>
            <span class="nobr"><?php /* @escapeNotVerified */ echo __('Total Incl. Tax'); ?>:<br />
                <?php /* @escapeNotVerified */ echo $block->formatPrice($block->getFinalUnitDisplayPriceInclTax()); ?>
            </span>
        <?php endif; ?>
    <?php endif; ?>
<?php endif; ?>
