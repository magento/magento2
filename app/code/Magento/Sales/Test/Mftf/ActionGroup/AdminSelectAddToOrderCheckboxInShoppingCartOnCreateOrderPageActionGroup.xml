<actionGroups xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:noNamespaceSchemaLocation="urn:magento:mftf:Test/etc/actionGroupSchema.xsd">
    <actionGroup name="AdminSelectAddToOrderCheckboxInShoppingCartOnCreateOrderPageActionGroup">
        <annotations>
            <description>Selects the "Add to Order" checkbox for a Product in the "Shopping Cart" section on Create Order page.</description>
        </annotations>
        <arguments>
            <argument name="product" type="entity"/>
        </arguments>

        <waitForElementVisible selector="{{AdminCreateOrderShoppingCartSection.addToOrderCheckBox(product.name)}}" stepKey="waitForAddToOrderCheckBox"/>
        <click selector="{{AdminCreateOrderShoppingCartSection.addToOrderCheckBox(product.name)}}" stepKey="selectProduct"/>
        
    </actionGroup>
</actionGroups>
