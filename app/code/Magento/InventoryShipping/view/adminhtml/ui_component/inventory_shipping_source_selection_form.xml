<form xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" component="Magento_InventoryShipping/js/form/form" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Ui:etc/ui_configuration.xsd">
    <argument name="data" xsi:type="array">
        <item name="config" xsi:type="array">
            <item name="source_selection_url" xsi:type="url" path="*/*/ProcessAlgorithm"/>
        </item>
        <item name="js_config" xsi:type="array">
            <item name="provider" xsi:type="string">inventory_shipping_source_selection_form.inventory_shipping_source_selection_form_data_source</item>
        </item>
        <item name="label" xsi:type="string" translate="true">Source Selection</item>
        <item name="template" xsi:type="string">templates/form/collapsible</item>
    </argument>
    <settings>
        <dataScope>data</dataScope>
        <namespace>inventory_shipping_source_selection_form</namespace>
        <deps>
            <dep>inventory_shipping_source_selection_form.inventory_shipping_source_selection_form_data_source</dep>
        </deps>
        <buttons>
            <button name="back">
                <url path="sales/order/index"/>
                <class>back</class>
                <label translate="true">Back</label>
            </button>
            <button name="reset">
                <class>reset</class>
                <label translate="true">Reset</label>
            </button>
            <button name="save" >
                <class>save primary</class>
                <label translate="true">Create Shipment</label>
            </button>
            <button name="source_selection_algorithms" class="Magento\InventoryShipping\Ui\Component\Control\SourceSelection\AlgorithmSelectionButton"/>
        </buttons>
    </settings>
    <dataSource name="inventory_shipping_source_selection_form_data_source" component="Magento_Ui/js/form/provider">
        <settings>
            <validateUrl path="*/*/validate"/>
            <submitUrl path="admin/order_shipment/new"/>
        </settings>
        <dataProvider class="Magento\InventoryShipping\Ui\DataProvider\SourceSelectionDataProvider" name="inventory_shipping_source_selection_form_data_source">
            <settings>
                <requestFieldName>order_id</requestFieldName>
                <primaryFieldName>order_id</primaryFieldName>
            </settings>
        </dataProvider>
    </dataSource>
    <fieldset name="general" sortOrder="10">
        <argument name="data" xsi:type="array">
            <item name="config" xsi:type="array">
                <item name="dataScope" xsi:type="string" />
            </item>
        </argument>
        <settings>
            <label />
            <collapsible>false</collapsible>
            <opened>true</opened>
        </settings>
        <field name="order_id" formElement="hidden">
            <settings>
                <dataType>number</dataType>
                <dataScope>order_id</dataScope>
            </settings>
        </field>
        <field name="sourceCode" component="Magento_InventoryShipping/js/form/element/sourceCode" formElement="select" sortOrder="10">
            <settings>
                <validation>
                    <rule name="required-entry" xsi:type="boolean">true</rule>
                </validation>
                <dataType>text</dataType>
                <dataScope>sourceCode</dataScope>
                <label translate="true">Select Source</label>
            </settings>
            <formElements>
                <select>
                    <settings>
                        <caption translate="true">-- Please Select --</caption>
                    </settings>
                </select>
            </formElements>
        </field>
        <dynamicRows name="items" component="Magento_Ui/js/dynamic-rows/dynamic-rows" sortOrder="20" template="ui/dynamic-rows/templates/grid">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="identificationDRProperty" xsi:type="string">orderItemId</item>
                    <item name="dataProvider" xsi:type="string">items</item>
                    <item name="map" xsi:type="array">
                        <item name="sku" xsi:type="string">sku</item>
                        <item name="qty" xsi:type="string">qty</item>
                        <item name="orderItemId" xsi:type="string">orderItemId</item>
                    </item>
                </item>
            </argument>
            <settings>
                <additionalClasses>
                    <class name="swatch-visual-options-container">true</class>
                    <class name="admin__field-wide">true</class>
                </additionalClasses>
                <defaultRecord>false</defaultRecord>
                <addButton>false</addButton>
                <deleteProperty>false</deleteProperty>
                <recordTemplate>record</recordTemplate>
                <identificationProperty>order_item_id</identificationProperty>
                <columnsHeader>true</columnsHeader>
                <dndConfig>
                    <param name="enabled" xsi:type="boolean">false</param>
                </dndConfig>
            </settings>
            <container name="record" component="Magento_Ui/js/dynamic-rows/record">
                <argument name="data" xsi:type="array">
                    <item name="config" xsi:type="array">
                        <item name="isTemplate" xsi:type="boolean">true</item>
                        <item name="is_collection" xsi:type="boolean">true</item>
                        <item name="dataScope" xsi:type="string"/>
                        <item name="positionProvider" xsi:type="string">orderItemId</item>
                    </item>
                </argument>
                <field name="product" formElement="input" sortOrder="10">
                    <settings>
                        <elementTmpl>ui/form/element/html</elementTmpl>
                        <dataType>text</dataType>
                        <dataScope>product</dataScope>
                        <label translate="true">Product</label>
                    </settings>
                </field>
                <field name="qtyToShip" formElement="input" sortOrder="20">
                    <settings>
                        <elementTmpl>ui/dynamic-rows/cells/text</elementTmpl>
                        <dataType>text</dataType>
                        <dataScope>qtyToShip</dataScope>
                        <label translate="true">Qty To Ship</label>
                    </settings>
                </field>
                <dynamicRows name="sources" component="Magento_Ui/js/dynamic-rows/dynamic-rows-grid" sortOrder="30">
                    <argument name="data" xsi:type="array">
                        <item name="js_config" xsi:type="array">
                            <item name="dataProvider" xsi:type="string">sources</item>
                            <item name="map" xsi:type="array">
                                <item name="sourceName" xsi:type="string">sourceName</item>
                                <item name="sourceCode" xsi:type="string">sourceCode</item>
                                <item name="qtyAvailable" xsi:type="string">qtyAvailable</item>
                                <item name="qtyToDeduct" xsi:type="string">qtyToDeduct</item>
                            </item>
                            <item name="identificationDRProperty" xsi:type="string">sourceCode</item>
                        </item>
                    </argument>
                    <settings>
                        <label translate="true">Available Sources</label>
                        <defaultRecord>false</defaultRecord>
                        <addButton>false</addButton>
                        <deleteProperty>true</deleteProperty>
                        <recordTemplate>record</recordTemplate>
                        <identificationProperty>sourceCode</identificationProperty>
                        <dndConfig>
                            <param name="enabled" xsi:type="boolean">false</param>
                        </dndConfig>
                        <columnsHeader>true</columnsHeader>
                    </settings>
                    <container name="record" component="Magento_Ui/js/dynamic-rows/record">
                        <argument name="data" xsi:type="array">
                            <item name="config" xsi:type="array">
                                <item name="isTemplate" xsi:type="boolean">true</item>
                                <item name="is_collection" xsi:type="boolean">true</item>
                                <item name="dataScope" xsi:type="string" />
                            </item>
                        </argument>
                        <field name="sourceCode" formElement="hidden" sortOrder="1">
                            <settings>
                                <dataType>text</dataType>
                                <dataScope>sourceCode</dataScope>
                                <visible>false</visible>
                            </settings>
                        </field>
                        <field name="sourceName" formElement="input" sortOrder="10">
                            <settings>
                                <elementTmpl>ui/dynamic-rows/cells/text</elementTmpl>
                                <dataType>text</dataType>
                                <dataScope>sourceName</dataScope>
                                <label translate="true">Source</label>
                            </settings>
                        </field>
                        <field name="qtyAvailable" formElement="input" sortOrder="20">
                            <settings>
                                <elementTmpl>ui/dynamic-rows/cells/text</elementTmpl>
                                <dataType>text</dataType>
                                <dataScope>qtyAvailable</dataScope>
                                <label translate="true">Qty Available</label>
                            </settings>
                        </field>
                        <field name="qtyToDeduct" formElement="input"
                               component="Magento_InventoryShipping/js/form/element/qty_to_deduct"
                               sortOrder="30">
                            <settings>
                                <validation>
                                    <rule name="validate-number" xsi:type="boolean">true</rule>
                                    <rule name="validate-zero-or-greater" xsi:type="boolean">true</rule>
                                    <rule name="less-than-equals-to" xsi:type="number">0</rule>
                                </validation>
                                <elementTmpl>ui/form/element/input</elementTmpl>
                                <dataType>number</dataType>
                                <dataScope>qtyToDeduct</dataScope>
                                <label translate="true">Qty To Deduct</label>
                                <imports>
                                    <link name="sourceCode">${$.parentName}.sourceCode:value</link>
                                    <link name="qtyAvailable">${$.parentName}.qtyAvailable:value</link>
                                    <link name="toggleDisable">inventory_shipping_source_selection_form.inventory_shipping_source_selection_form.general.sourceCode:value</link>
                                </imports>
                            </settings>
                        </field>
                    </container>
                </dynamicRows>
            </container>
        </dynamicRows>
    </fieldset>
</form>
