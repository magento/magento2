                <item name="store" xsi:type="string">Magento\Store\Model\Store</item>
                <item name="website" xsi:type="string">Magento\Store\Model\Website</item>
                <item name="storeGroup" xsi:type="string">Magento\Store\Model\Group</item>
            </argument>
        </arguments>
