<actionGroups xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:noNamespaceSchemaLocation="urn:magento:mftf:Test/etc/actionGroupSchema.xsd">
    <actionGroup name="StorefrontNavigateToSpecifiedUrlActionGroup">
        <annotations>
            <description>Goes to the specified page on the Storefront.</description>
        </annotations>
        <arguments>
            <argument name="pageUrl" type="string"/>
        </arguments>

        <amOnPage url="{{pageUrl}}" stepKey="goToStorefrontPage"/>
        <waitForPageLoad stepKey="waitForStorefrontPageLoad"/>
    </actionGroup>
</actionGroups>
