<actionGroups xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:noNamespaceSchemaLocation="urn:magento:mftf:Test/etc/actionGroupSchema.xsd">
    <actionGroup name="AdminAssertProperCategoryUrlActionGroup">
        <annotations>
            <description>Verifies the URL Key on the Category page.</description>
        </annotations>
        <arguments>
            <argument name="categoryUrlKey" type="string"/>
        </arguments>
        <scrollTo  selector="{{AdminCategorySEOSection.SectionHeader}}" x="0" y="-80" stepKey="scrollToSearchEngineOptimization"/>
        <click selector="{{AdminCategorySEOSection.SectionHeader}}" stepKey="selectSearchEngineOptimization"/>
        <seeInField selector="{{AdminCategorySEOSection.UrlKeyInput}}" userInput="{{categoryUrlKey}}" stepKey="seeCategoryUrlKey"/>
    </actionGroup>
</actionGroups>
