<actionGroups xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:noNamespaceSchemaLocation="urn:magento:mftf:Test/etc/actionGroupSchema.xsd">
    <actionGroup name="StorefrontGoToCheckoutFromMinicartActionGroup" extends="GoToCheckoutFromMinicartActionGroup">
        <annotations>
            <description>Extends GoToCheckoutFromMinicartActionGroup.
                         Clicks on the Storefront Mini Shopping Cart icon.
                         Clicks on 'Proceed to Checkout'.
                         Waits for page loaded.
            </description>
        </annotations>
        
        <waitForPageLoad stepKey="waitForCheckoutIsLoaded" after="goToCheckout"/>
    </actionGroup>
</actionGroups>
