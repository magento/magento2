<actionGroups xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:mftf:Test/etc/actionGroupSchema.xsd">
    <actionGroup name="AdminCheckTaxRateOnTaxRateGridActionGroup">
        <annotations>
            <description>Check the checkbox for the tax rate on the Tax Rate Grid</description>
        </annotations>
        <arguments>
            <argument name="rate"/>
        </arguments>

        <checkOption selector="{{AdminTaxRateGridSection.rateRowCheckboxByCode(rate.code)}}" stepKey="selectTaxRate"/>

    </actionGroup>
</actionGroups>
