        <?php if($this->getChildHtml($_tab['alias'])): ?>
            <div id="pt-<?php echo $_tab['alias'] ?>"><?php echo $this->getChildHtml($_tab['alias']) ?></div>
        <?php endif; ?>
    <?php endforeach; ?>
</div>
